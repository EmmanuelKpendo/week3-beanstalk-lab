<!-- index.hbs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Random Football Players</title>
    <style>
        body { font-family: Arial; background: #f0f0f0; padding: 2rem; }
        .card {
            background: #fff;
            padding: 1rem;
            border-radius: 8px;
            margin-bottom: 1rem;
            display: flex;
            gap: 1rem;
            align-items: center;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        }
        img {
            border-radius: 50%;
            height: 80px;
            width: 80px;
            object-fit: cover;
        }
        button {
            padding: 0.6rem 1.2rem;
            background: #007bff;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            margin-bottom: 1rem;
        }
        button:hover {
            background: #0056b3;
        }
    </style>
</head>
<body>
<h1>Random Football Players</h1>
<button onclick="loadPlayers()">Get Random Players</button>

<div id="player-list">
    {{#each players}}
        <div class="card">
            <strong>{{name}}</strong><br>
            Club: {{club}}<br>
            Country: {{country}}
        </div>
    {{/each}}
</div>
<script>
    async function loadPlayers() {
        const res = await fetch('/api/players');
        const players = await res.json();
        const container = document.getElementById('player-list');
        container.innerHTML = players.map(p => `
          <div class="card">
            <strong>${p.name}</strong><br>
 Club: ${p.club}<br>
            Country: ${p.country}
          </div>
      `).join('');
    }
</script>

</body>
</html>
